{
  "manifest_version": 3,
  "name": "Stock Trading Bot",
  "version": "1.0.2",
  "action": {
    "default_icon": {
      "16": "public/icon16-chrome.png",
      "48": "public/icon48-chrome.png",
      "128": "public/icon128-chrome.png"
    },
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "background",
    "scripting"
  ],
  "background": {
    "service_worker": "background.ts"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "https://robinhood.com/*"
      ],
      "resources": [
      ]
    }
  ]
}
