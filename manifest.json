{
  "manifest_version": 3,
  "name": "Stock Trading Bot",
  "version": "1.0.1",
  "action": {
    "default_icon": {
      "128": "public/icon128-chrome.png",
      "16": "public/icon16-chrome.png",
      "48": "public/icon48-chrome.png"
    },
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "background",
    "scripting"
  ],
  "background": {
    "service_worker": "background.ts"
  },
  "content_scripts": [
    {
      "matches": [
        "https://robinhood.com/*"
      ],
      "js": [
        "content-scripts/content-script.ts",
        "content-scripts/request-interceptor.ts"
      ]
    }
  ],
  "host_permissions": [
    "https://robinhood.com/*",
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "https://robinhood.com/*"
      ],
      "resources": [
        "content-scripts/request-interceptor.ts"
      ]
    }
  ]
}
