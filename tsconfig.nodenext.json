{
    "compilerOptions": {
        "composite": true,
        "importsNotUsedAsValues": "error",
        "isolatedModules": true,
        "jsx": "preserve",
        "lib": ["esnext", "dom", "DOM.Iterable"],
        "module": "nodenext",
        "paths": {
            "$/*": ["./automation/src/*"]
        },
        "skipLibCheck": true,
        "strict": true,
        "target": "esnext",
        "declaration": true,
        "useDefineForClassFields": true
    },
    "include": ["automation/src/**/*.ts"]
}
